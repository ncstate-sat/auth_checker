layout pyenv 3.10.4

export AUTHORIZER=casbin_authorizer

# MONGO
export CASBIN_AUTH_URI=mongodb://<MONGO_USER>:<MONGO_PASSWORD>@<MONGO_HOST>/?authSource=Accounts
export CASBIN_AUTH_DB=Accounts
export CASBIN_AUTHORIZER_POLICY_ADAPTER=mongo

